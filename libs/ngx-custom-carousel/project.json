{
    "name": "ngx-custom-carousel",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "sourceRoot": "libs/ngx-custom-carousel/src",
    "prefix": "ngx",
    "targets": {
        "build": {
            "executor": "@nx/angular:package",
            "options": {
                "project": "libs/ngx-custom-carousel/ng-package.json"
            },
            "configurations": {
                "production": {
                    "tsConfig": "libs/ngx-custom-carousel/tsconfig.lib.prod.json"
                },
                "development": {
                    "tsConfig": "libs/ngx-custom-carousel/tsconfig.lib.json"
                }
            },
            "defaultConfiguration": "production"
        },
        "test": {
            "executor": "@angular-devkit/build-angular:karma",
            "options": {
                "tsConfig": "libs/ngx-custom-carousel/tsconfig.spec.json",
                "polyfills": ["zone.js", "zone.js/testing"]
            },
            "configurations": {
                "ci": {
                    "watch": false,
                    "progress": false,
                    "browsers": "ChromeHeadless"
                }
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "options": {
                "lintFilePatterns": [
                    "libs/ngx-custom-carousel/**/*.ts",
                    "libs/ngx-custom-carousel/**/*.html"
                ]
            }
        }
    }
}
